<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kingja.higo.MainActivity">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View style="@style/div_hor_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_nav_higo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_nav_higo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@mipmap/ic_nav_higo"/>

            <TextView
                android:id="@+id/tv_nav_higo"
                style="@style/font_orange_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="嘻购"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_nav_lovego"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_nav_lovego"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@mipmap/ic_nav_lovego"/>

            <TextView
                android:id="@+id/tv_nav_lovego"
                style="@style/font_gray_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="爱购"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_nav_walkgo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_nav_walkgo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@mipmap/ic_nav_walkgo"/>

            <TextView
                android:id="@+id/tv_nav_walkgo"
                style="@style/font_gray_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="逛购"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_nav_journey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_nav_journey"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@mipmap/ic_nav_journey"/>

            <TextView
                android:id="@+id/tv_nav_journey"
                style="@style/font_gray_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="嘻购"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_nav_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_nav_mine"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@mipmap/ic_nav_mine"/>

            <TextView
                android:id="@+id/tv_nav_mine"
                style="@style/font_gray_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="我的"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
